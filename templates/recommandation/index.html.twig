{% extends 'base.html.twig' %}

{% block title %}EventParis{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background: linear-gradient(to bottom right, #0b2e4d, #007bff);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .register-box {
            width: 400px;
            padding: 40px;
            background: #f5f5f5;
            border-radius: 10px;
            box-shadow: 0 15px 25px rgba(0, 0, 0, .2);
            box-sizing: border-box;
            position: relative;
            margin: auto;
        }

        .register-box h1 {
            margin: 0 0 30px;
            padding: 0;
            color: #000;
            text-align: center;
        }

        .register-box input {
            width: 100%;
            padding: 10px 0;
            font-size: 16px;
            color: #000;
            margin-bottom: 20px;
            border: none;
            border-bottom: 1px solid #000;
            outline: none;
            background: transparent;
        }

        .register-box button {
            display: block;
            width: 100%;
            padding: 10px 20px;
            color: #fff;
            font-size: 16px;
            text-decoration: none;
            text-transform: uppercase;
            overflow: hidden;
            transition: .5s;
            margin-top: 20px;
            background: #007bff;
            border: 2px solid #007bff;
            border-radius: 5px;
            cursor: pointer;
        }

        .register-box button:hover {
            background: #0056b3;
            border-color: #0056b3;
            box-shadow: 0 0 5px #0056b3, 0 0 25px #0056b3, 0 0 50px #0056b3, 0 0 100px #0056b3;
        }

        .register-box a {
            color: #007bff;
            text-decoration: none;
            display: block;
            text-align: center;
            margin-top: 20px;
        }

        .register-box a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

