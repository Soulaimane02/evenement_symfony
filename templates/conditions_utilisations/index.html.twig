{% extends 'base.html.twig' %}

{% block title %}EventParis{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, #333333, #111111);
            color: #ffffff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .content {
            margin: 0 auto;
            max-width: 800px;
            padding: 20px;
        }

        h1, h2 {
            color: #ffffff;
        }

        p {
            margin-bottom: 20px;
        }

        a {
            color: #1e88e5;
            text-decoration: none;
        }

        a:hover {
            color: #1565c0;
            text-decoration: underline;
        }
    </style>
{% endblock %}

